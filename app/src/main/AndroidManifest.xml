<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.xsmile2008.khaki">

    <application
        android:name=".AppClass"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.HumanDetailsActivity" android:label="Recruit details" />
        <activity android:name=".activities.PassportDetailsActivity" android:label="@string/passport_details"/>
        <activity android:name=".activities.MilitaryCardDetailsActivity" android:label="Military Card Details"/>
    </application>
</manifest>